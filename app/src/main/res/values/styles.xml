<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBrownBorderlessHeight48" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@drawable/button_colors</item>
        <item name="android:minHeight">51dp</item>
        <item name="android:strokeWidth">0</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShopInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/cyan</item>
        <item name="boxBackgroundColor">@color/grey_background</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:labelTextSize">20sp</item>
    </style>

</resources>