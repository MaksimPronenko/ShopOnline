<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBrownBorderlessHeight51" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@drawable/button_colors</item>
        <item name="android:minHeight">51dp</item>
        <item name="android:strokeWidth">0</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShopInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/grey_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:labelTextSize">20sp</item>
    </style>

    <style name="CatalogSortingSpinnerItemStyle"
        parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_menu_text</item>
    </style>

    <style name="CatalogSortingSpinnerDropdownItemStyle"
        parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_menu_text</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="CatalogChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_colors</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/chip_text_colors</item>
        <item name="textStartPadding">12dp</item>
        <item name="textEndPadding">12dp</item>
        <item name="closeIconVisible">false</item>
        <item name="closeIconEndPadding">8dp</item>
        <item name="closeIconTint">@color/white</item>
        <item name="closeIconSize">8dp</item>
        <item name="closeIcon">@drawable/chip_close</item>
        <item name="chipCornerRadius">14dp</item>
        <item name="chipMinHeight">28dp</item>
    </style>

</resources>